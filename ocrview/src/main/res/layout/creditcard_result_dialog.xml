<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:id="@+id/scanResultImage"
            android:scaleType="fitCenter"
            android:src="@drawable/credit_card_img"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            />
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Card Number :"/>

        <EditText
            android:id="@+id/scanResultCardNumberTextEditor"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#FF50C0FF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Expiry :"/>

        <EditText
            android:id="@+id/scanResultCardExpiryTextEditor"
            android:layout_marginLeft="80dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#FF444444"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!--
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Scan Time :" />

        <EditText
            android:id="@+id/scanResult_ScanTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:inputType="none"
            android:singleLine="true"
            android:textColor="#FF444444"
            android:textSize="18dp"
            android:textStyle="bold" />
        -->
    </LinearLayout>

</LinearLayout>